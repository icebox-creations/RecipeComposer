<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="creations.icebox.recipecomposer.RecipesFragment"
    android:background="@color/almond"
    android:orientation="vertical" >

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:divider="@color/lighter_grey"
        android:dividerHeight="2dp"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:typeface="roboto_slab_regular"
        android:textSize="22sp"
        android:text="@string/recipes_empty_list_view"
        android:layout_gravity="center" />

</FrameLayout>
